<Window x:Class="Winding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Winding"        
        mc:Ignorable="d"
        Title="Обмотки" Height="600" Width="1200">
    <Window.DataContext>
        <local:MainVM/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"  />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="{Binding right_bord, Mode=TwoWay}"   />
        </Grid.ColumnDefinitions>
       
        <Grid.RowDefinitions>
            <RowDefinition Height="0.75*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="0.25*"></RowDefinition>
        </Grid.RowDefinitions>

        <GridSplitter Style="{StaticResource Vertical}"/>
        <GridSplitter Style="{StaticResource Horizontal}"/>

        <Grid Background="AliceBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="270" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" >
                <TextBlock Margin="5,0,0,0" Style="{StaticResource Wire_type_text}" Text="Размеры провода:"></TextBlock>
                <DockPanel Margin="5,0,0,0">
                    <ComboBox  Style="{StaticResource Wire_type}">
                        <TextBlock>ПБУ</TextBlock>
                        <TextBlock>ПТБ</TextBlock>
                        <TextBlock>ПБП</TextBlock>
                    </ComboBox>
                    <TextBox Style="{StaticResource Wire_type_n}"  ></TextBox>
                    <TextBox Style="{StaticResource Wire_type_x}"  DockPanel.Dock="Right"></TextBox>
                    <TextBox Style="{StaticResource Wire_type_Z}"></TextBox>
                    <TextBox Style="{StaticResource Wire_type_a}"></TextBox>
                    <TextBox Style="{StaticResource Wire_type_b}"></TextBox>
                    <TextBox Style="{StaticResource Wire_type_x}"></TextBox>
                </DockPanel>
                <DockPanel Margin="5,30,0,0">
                    <TextBlock Style="{StaticResource Wire_type_text}" Text="Количество витков:"></TextBlock>
                    <TextBox Style="{StaticResource Number_turns_value}"  DockPanel.Dock="Right"></TextBox>
                </DockPanel>
                <DockPanel Margin="5,30,0,0">
                    <TextBlock Style="{StaticResource Wire_type_text}" Text="Поле захода витка:"></TextBlock>
                    <TextBox Style="{StaticResource Field_numeric}"  DockPanel.Dock="Right"></TextBox>
                </DockPanel>               
            </StackPanel>
        </Grid>

        
        
        <Grid Grid.Column="2" >
            <ScrollViewer Grid.Column="2" Margin="0,0,0,30">
                <Polyline Stroke="Red" Points="{Binding coord}" />                
            </ScrollViewer>           

            <Grid  ShowGridLines="True">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />                   
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions >
                    <RowDefinition Height="30" ></RowDefinition>
                </Grid.RowDefinitions>
                <TextBox Grid.Column="1"  Grid.Row="1" Text="1"   Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="2"  Grid.Row="1" Text="2"   Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="3"  Grid.Row="1" Text="3"   Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="4"  Grid.Row="1" Text="4"   Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="5"  Grid.Row="1" Text="5"   Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="6"  Grid.Row="1" Text="6"   Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="7"  Grid.Row="1" Text="7"   Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="8"  Grid.Row="1" Text="8"   Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="9"  Grid.Row="1" Text="9"   Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="10" Grid.Row="1" Text="10"  Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="11" Grid.Row="1" Text="11"  Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="12" Grid.Row="1" Text="12"  Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="13" Grid.Row="1" Text="13"  Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="14" Grid.Row="1" Text="14"  Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="15" Grid.Row="1" Text="15"  Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="16" Grid.Row="1" Text="16"  Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="17" Grid.Row="1" Text="17"  Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="18" Grid.Row="1" Text="18"  Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="19" Grid.Row="1" Text="19"  Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="20" Grid.Row="1" Text="20"  Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="21" Grid.Row="1" Text="21"  Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="22" Grid.Row="1" Text="22"  Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="23" Grid.Row="1" Text="23"  Style="{StaticResource Wire_type_text}"/>
                <TextBox Grid.Column="24" Grid.Row="1" Text="24"  Style="{StaticResource Wire_type_text}"/>
            </Grid>
            
            </Grid>
        
        <Grid Grid.ColumnSpan="3" Grid.Row="2"  Background="Lavender">
            <DockPanel >
                <TextBlock Style="{StaticResource Wire_type_text}" Text="Высота слоевой обмотки: "></TextBlock>
                <TextBlock Style="{StaticResource Wire_type_text}" Text="{Binding Height}"  ></TextBlock>
                <TextBlock Style="{StaticResource Wire_type_text}" Text=" мм"  ></TextBlock>
            </DockPanel>            
        </Grid>   

    </Grid>
</Window>
