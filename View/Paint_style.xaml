<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Winding.View">

    <Style x:Key="Turn_paint">
        <Setter Property="Polyline.Stroke" Value="Red"/>
        <Setter Property="Polyline.StrokeThickness" Value="1.9"/>
        <Setter Property="Polyline.StrokeLineJoin" Value="Bevel"/>       
    </Style>

    <Style x:Key="Turn_paint_down">
        <Setter Property="Polyline.Stroke" Value="Blue"/>
        <Setter Property="Polyline.StrokeThickness" Value="1.9"/>
        <Setter Property="Polyline.StrokeLineJoin" Value="Bevel"/>
    </Style>


    <Style x:Key="Area_paint">
        <Setter Property="Polyline.Stroke" Value="LightGreen"/>
        <Setter Property="Polyline.StrokeThickness" Value="2"/>
        <Setter Property="Polyline.StrokeLineJoin" Value="Bevel"/>
        <Setter Property="Polyline.StrokeDashArray" Value="1 0"/>
    </Style>


</ResourceDictionary>