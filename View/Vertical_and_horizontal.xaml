<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Winding">
    <Style x:Key="Vert_and_Horizont">
        <Setter Property="GridSplitter.VerticalAlignment" Value="Center" />
        <Setter Property="GridSplitter.Background" Value="Black"/>
        <Setter Property="GridSplitter.ShowsPreview" Value="False"/>
    </Style>
    <Style x:Key="Horizontal" BasedOn="{StaticResource Vert_and_Horizont}" >
        <Setter Property="Grid.ColumnSpan" Value="3"/>
        <Setter Property="Grid.Row" Value="1"/>        
        <Setter Property="GridSplitter.VerticalAlignment" Value="Center"/>
        <Setter Property="GridSplitter.HorizontalAlignment" Value="Stretch"/>
        <Setter Property="GridSplitter.Height" Value="5"/>
    </Style>
    <Style x:Key="Vertical" BasedOn="{StaticResource Vert_and_Horizont}">
        <Setter Property="Grid.Column" Value="1"/>
        <Setter Property="Grid.Row" Value="0"/>
        <Setter Property="GridSplitter.VerticalAlignment" Value="Stretch"/>
        <Setter Property="GridSplitter.HorizontalAlignment" Value="Center"/>
        <Setter Property="GridSplitter.Width" Value="5"/>
    </Style>
</ResourceDictionary>